<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument name="title" translate="true" xsi:type="string">Blog</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="content">
            <block template="MageMastery_Blog::posts.phtml" as="posts">
                <arguments>
                    <argument name="posts_view_model" xsi:type="object">MageMastery\Blog\ViewModel\Posts</argument>
                </arguments>
                <block class="Magento\Theme\Block\Html\Pager" name="blog_pager"/>
                <block template="MageMastery_Blog::post.phtml" as="post">
                    <arguments>
                        <argument name="post_view_model" xsi:type="object">MageMastery\Blog\ViewModel\PostViewModel</argument>
                    </arguments>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
